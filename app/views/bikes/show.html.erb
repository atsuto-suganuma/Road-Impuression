                      <%= f.text_field :impression_title, class:"form-control", placeholder: "レビュータイトル" %>
                      <%= f.text_area :impression_text, class:"form-control", placeholder: "コメントをここに" , :size => "70x10" %><br>
                      <%= f.submit "送信する",class:"btn btn-danger" %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>

