                        $('.comfort_star-rate-<%= impression.id %>').raty({
                          size: 36,
                          starOff:  '<%= asset_path('star-off.png') %>',
                          starOn : '<%= asset_path('star-on.png') %>',
                          readOnly: true,
                          score: <%=impression.comfort_evaluation %>
                        });

                        $('.cp_star-rate-<%= impression.id %>').raty({
                          size: 36,
