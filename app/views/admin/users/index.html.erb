<%=render 'layouts/admin-header', q: @q %>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>ユーザー一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>最終ログイン日</th>
            <th>警告回数</th>
            <th>備考</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @users.each do |user| %>
              <td>
                <%= link_to admin_user_path(user.id) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td>
                <%= simple_date(user.current_sign_in_at)%>
              </td>
              <td>
                <%= form_for user, :url => {:action => :update} do |f| %>
                <%= f.select :caution, [["違反なし", ""],["注意","オールラウンド"],["警告","エンデュランス"], ["懲戒",""]]%>
                <% end %>
              </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
<%= render 'layouts/page-up' %>
<%=render 'layouts/footer' %>