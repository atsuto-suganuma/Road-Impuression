<%=render 'layouts/header', q: @q %>
<div class="container">
  <div class="row">
    <div class="col-sm-12, col-xl-12">
      <h2>メーカー一覧</h2>
    </div>
  </div>
  <div class="row">
      <% @makers.each do |maker| %>
        <div class="col-sm-6 col-xl-4">
          <%= link_to maker_path(maker.id) do %>
            <%= attachment_image_tag maker, :maker_image, format: 'png', size: "200x100" %><br>
          <% end %>
            <%= maker.maker_name%>
        </div>
      <% end %>
  </div>
</div>
<%=render 'layouts/footer' %>